@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model BookstoreRelations.Web.Pages.Authors.EditModal

@{
    Layout = null;
}

<form method="post" id="EditBookModal" asp-page="/Authors/EditModal">
    <abp-modal>
        <abp-modal-header title="Update"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="edit-book-modal-tabs">
                <abp-tab title="Author Information" class="mt-3">
                    <div id="book-information-wrapper" class="mt-3">
                        <abp-input asp-for="Id" />
                        <abp-input asp-for="EditingAuthor.Name" label="Author Name" />
                        <abp-input asp-for="EditingAuthor.ShortBio" label="short bio" />
                        <abp-input asp-for="EditingAuthor.BirthDate" type="date" label="Publish Date" />
                    </div>
                </abp-tab>
                
            </abp-tabs>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
